<style>

body {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}


.form-signin {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: 0 auto;
}

.form-signin .form-control {
  position: relative;
  box-sizing: border-box;
  height: auto;
  padding: 10px;
  font-size: 16px;
}

.middle {
  padding: 15px;
  position: absolute;
  top: 50%;
  left: 50%;
  -ms-transform: translateX(-50%) translateY(-50%);
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
}

</style>


<div class="middle">

<h1 class="text-center"> Create Account </h1>

<%= form_for @user do |f| %>
  <div class="form-outline mb-4">
    <input type="text" id="form2Example1" class="form-control" name="username" placeholder="Username" />
  </div>

  <div class="form-outline mb-4">
    <input type="password" id="pwd" class="form-control" name="password" placeholder="password" />
  </div>
  <p> Occupation </p>
    <div class="form-outline mb-4">
    <%= f.collection_radio_buttons(:user_type, [['Professor', 'professor'], ['Student', 'student'], ['Grad Student', 'grad_student']], :second, :first, class: 'form-check-input') %><br>
   </div>
    <%= f.submit("Create Account", class: 'btn btn-primary btn-block mb-4') %>
    
<% end %>

</div>